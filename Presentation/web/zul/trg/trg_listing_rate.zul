<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<?init class="org.zkoss.zk.ui.util.Composition" arg0="/zul/templates/main_template.zul"?>
<?page viewport="width=device-width, initial-scale=0.5, user-scalable=yes"?>
<?page title="${labels.template.title}"?>
<?root-attributes lang="en"xml:lang="en"?>
<?link rel="shortcut icon" type="image/x-icon" href="/img/logo.png"?>
<?link rel="icon" type="image/x-icon" href="/img/logo.png"?>
<window xmlns="http://www.zkoss.org/2005/zul"
        xmlns:h="http://www.w3.org/1999/xhtml"
        self="@define(detail)"
        border="none"
        width="1200px"
        apply="org.zkoss.bind.BindComposer"
        viewModel="@id('vm') @init('org.teiath.web.vm.trg.ListingRateVM')"
        validationMessages="@id('vmsgs')">

	<script>
		function doLoad() {
		$('.rateit').rateit({
		step: 1,
		starwidth: 32,
		starheight: 32
		});

		bindEvents();
		}

		function doEdit(val) {
		$('.rateit').rateit({
		step: 1,
		starwidth: 32,
		starheight: 32,
		value: val
		});

		bindEvents();
		}

		function bindEvents() {
		$('.rateit').bind('rated', function() {
		var txtBox = zk.Widget.$('$rating');
		txtBox.setValue($(this).rateit('value'));
		txtBox.smartUpdate('value', $(this).rateit('value'));
		});

		$('.rateit').bind('reset', function() {
		var txtBox = zk.Widget.$('$rating');
		txtBox.setValue(0);
		txtBox.smartUpdate('value', 0);
		});
		}
	</script>

	<style>
		tr.z-row-over > td.z-row-inner {
		border-bottom: 1px solid #FFFFFF;
		border-top: 1px solid #FFFFFF;
		}

		tr.z-row-over > td.z-row-inner, tr.z-row-over > .z-cell {
		background-image: none;
		}
	</style>
	<div form="@id('fx') @save(vm.listingAssessment, before='onSave')  " sclass="detail">
		<div align="left" width="99%">
			<hbox width="100%" widths="@load(not empty fx.id? '50%, 50%': '50%, 50%')">
				<label sclass="headerText" value="${labels.common.action.rateUser}" />
				<div width="100%" style="text-align: right">
					<toolbarbutton image="/img/save.png" onClick="@command('onSave')" />
					<toolbarbutton image="/img/cancel.png" onClick="@command('onCancel')" />
				</div>
			</hbox>
			<separator height="20px" />
			<label value="${labels.listing.productName}: " />
			<label value="@load(vm.transaction.listingInterest.listing.productName)" />
			<separator height="10px" />
			<label value="${labels.listing.transactionDate}: " />
			<label value="@load(vm.transaction.transactionDate) @converter('formatedDate', format='dd/MM/yyyy')" />
			<separator height="10px" />
			<label value="${labels.listing.productDescription}:" />
			<label value="@load(vm.transaction.listingInterest.listing.productDescription)" />
			<separator height="20px" />
			<grid oddRowSclass="non-odd" style="border: 0">
				<columns>
					<column width="20%" />
					<column width="10%" />
				</columns>
				<rows>
					<row spans="1, 3" sclass="viewRow">
						<vbox>
							<label width="100%" sclass="labelNSGrayNormal" value="${labels.common.action.rate}*:" />
							<h:div class="rateit bigstars"></h:div>
							<intbox value="0" id="rating" visible="false">
								<custom-attributes org.zkoss.zk.ui.updateByClient="true" />
							</intbox>

						</vbox>
					</row>
					<row spans="1, 3" sclass="viewRow">
						<separator height="20px" />
					</row>
					<row spans="1, 3" sclass="viewRow">
						<vbox>
							<label width="100%" sclass="labelNSGrayNormal" value="${labels.route.comments}*:" />
							<textbox id="comment" rows="4" multiline="true" maxlength="300" width="200px"
							         tabindex="3" mold="rounded" value="@bind(vm.listingAssessment.comment)" />
						</vbox>
					</row>
				</rows>
			</grid>
		</div>
	</div>
	<style src="/js/rateit/rateit.css" />
	<style src="/js/rateit/bigstars.css" />
	<script src="/js/rateit/jquery.rateit.js"></script>
</window>
